{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Orbit",
  "patterns": [
    {
      "include": "#template-section"
    },
    {
      "include": "#script-section"
    },
    {
      "include": "#style-section"
    }
  ],
  "repository": {
    "template-section": {
      "begin": "(<)(template)(>)",
      "end": "(</)(template)(>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.template.orbit" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.template.orbit" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "patterns": [
        {
          "include": "text.html.basic"
        },
        {
          "match": "\\{\\{(.+?)\\}\\}",
          "captures": {
            "0": { "name": "expression.orbit" },
            "1": { "name": "source.rust" }
          }
        }
      ]
    },
    "script-section": {
      "begin": "(<)(script)(>)",
      "end": "(</)(script)(>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.script.orbit" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.script.orbit" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "contentName": "source.rust",
      "patterns": [
        {
          "begin": "component\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*\\{",
          "beginCaptures": {
            "0": { "name": "keyword.other.component.orbit" },
            "1": { "name": "entity.name.type.component.orbit" }
          },
          "end": "\\}",
          "patterns": [
            {
              "begin": "props\\s*\\{",
              "beginCaptures": {
                "0": { "name": "keyword.other.props.orbit" }
              },
              "end": "\\}",
              "patterns": [
                { "include": "source.rust" }
              ]
            },
            {
              "begin": "state\\s*\\{",
              "beginCaptures": {
                "0": { "name": "keyword.other.state.orbit" }
              },
              "end": "\\}",
              "patterns": [
                { "include": "source.rust" }
              ]
            },
            { "include": "source.rust" }
          ]
        },
        { "include": "source.rust" }
      ]
    },
    "style-section": {
      "begin": "(<)(style)(>)",
      "end": "(</)(style)(>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.style.orbit" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.style.orbit" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "contentName": "source.css",
      "patterns": [
        { "include": "source.css" }
      ]
    }
  },
  "scopeName": "source.orbit"
}
